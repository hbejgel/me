---
// Underworld Overlay component
---

<style>
  .underworld-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: calc(100% - 16px); /* Leave space for scrollbar */
  background: #000000;
  z-index: 9999;
  opacity: 0;
  transition: opacity 1s ease;
  pointer-events: none;
  /* Ensure proper stacking context */
  isolation: isolate;
  /* Don't hide scrollbar - let it remain visible */
  overflow: visible;
}

.underworld-overlay.active {
  opacity: 1;
}

.underworld-scene {
  position: absolute;
  bottom: 20%;
  left: 50%;
  transform: translateX(-50%);
  width: 300px;
  height: 200px;
  pointer-events: none;
  z-index: 10000;
  opacity: 0;
  transition: opacity 1s ease;
}

.underworld-scene.active {
  opacity: 1;
}

/* Ghostly Spirits Animation */
.ghost-spirit {
  position: absolute;
  width: 8px;
  height: 20px;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
  border-radius: 50% 50% 0 0;
  animation: ghost-rise 8s linear infinite;
  opacity: 0.6;
  filter: blur(1px);
}

.ghost-spirit:nth-child(1) {
  left: 15%;
  animation-delay: 0s;
}

.ghost-spirit:nth-child(2) {
  left: 35%;
  animation-delay: 2s;
}

.ghost-spirit:nth-child(3) {
  left: 55%;
  animation-delay: 4s;
}

.ghost-spirit:nth-child(4) {
  left: 75%;
  animation-delay: 6s;
}

.ghost-spirit:nth-child(5) {
  left: 25%;
  animation-delay: 1s;
}

.ghost-spirit:nth-child(6) {
  left: 45%;
  animation-delay: 3s;
}

.ghost-spirit:nth-child(7) {
  left: 65%;
  animation-delay: 5s;
}

.ghost-spirit:nth-child(8) {
  left: 85%;
  animation-delay: 7s;
}

@keyframes ghost-rise {
  0% {
    transform: translateY(100vh) scale(0.5);
    opacity: 0;
  }
  10% {
    opacity: 0.6;
    transform: translateY(90vh) scale(0.8);
  }
  50% {
    opacity: 0.8;
    transform: translateY(50vh) scale(1.5);
  }
  90% {
    opacity: 0.6;
    transform: translateY(10vh) scale(0.8);
  }
  100% {
    transform: translateY(-10vh) scale(0.5);
    opacity: 0;
  }
}

.underworld-bubble {
  position: fixed;
  top: 80px;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  border: 2px solid #444;
  border-radius: 8px;
  padding: 20px 30px;
  min-width: 200px;
  max-width: 280px;
  text-align: left;
  opacity: 0;
  transition: all 1s ease;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.8);
  z-index: 10003;
  /* Ensure bubble is always on top */
  pointer-events: auto;
}

.underworld-bubble.active {
  opacity: 1;
}

/* Ensure bubble is visible on all devices */
.underworld-bubble {
  /* Add backdrop for better readability */
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  
  /* Ensure it's above everything */
  isolation: isolate;
  
  /* Prevent any clipping */
  overflow: visible;
  
  /* Ensure proper stacking context */
  transform-style: preserve-3d;
}

/* Mobile responsive adjustments */
@media (max-width: 768px) {
  .underworld-bubble {
    top: 60px;
    left: 20px;
    transform: none;
    min-width: 180px;
    max-width: 240px;
    padding: 15px 20px;
  }
}

@media (max-width: 480px) {
  .underworld-bubble {
    top: 50px;
    left: 15px;
    min-width: 160px;
    max-width: 200px;
    padding: 12px 16px;
  }
  
  .underworld-bubble h3 {
    font-size: 0.8rem;
  }
  
  .underworld-bubble p {
    font-size: 0.9rem;
  }
}



.underworld-bubble h3 {
  color: #ccc;
  font-family: 'Cinzel', 'Times New Roman', serif;
  font-size: 0.9rem;
  margin: 0 0 12px 0;
  letter-spacing: 0.02em;
  font-weight: 700;
  text-transform: uppercase;
}

.underworld-bubble p {
  color: #aaa;
  font-family: 'Crimson Text', 'Times New Roman', serif;
  font-size: 1rem;
  line-height: 1.5;
  margin: 0;
  font-style: italic;
} 
</style>

<!-- Underworld Overlay -->
